---
import Layout from '../../../layouts/Layout.astro';
---

<Layout title="Transparansi Investasi Ilmu | Isyraq An-Nur Philanthropy">
    <!-- HEADER -->
    <header class="bg-royal-950 text-white pt-32 pb-48 relative overflow-hidden rounded-b-[5rem] shadow-2xl">
        <div class="absolute inset-0 opacity-[0.05] pointer-events-none"
            style="background-image: url('https://www.transparenttextures.com/patterns/arabesque.png');"></div>
        <div
            class="absolute top-0 right-0 w-[600px] h-[600px] bg-gold-400/10 rounded-full blur-[120px] translate-x-1/2 -translate-y-1/2">
        </div>

        <div class="max-w-7xl mx-auto px-6 relative z-10 text-center">
            <span class="text-gold-400 font-bold uppercase tracking-[0.4em] text-xs mb-6 block">Akuntabilitas & Amanah</span>
            <h1 class="text-5xl md:text-7xl font-display mb-8 leading-tight">Laporan Investasi Ilmu</h1>
            <p class="text-royal-100/70 text-xl max-w-3xl mx-auto font-light leading-relaxed">
                Transparansi pengelolaan dana wakaf dan donasi untuk pengembangan kurikulum, riset peradaban, dan beasiswa penuh kader masa depan.
            </p>
        </div>
    </header>

    <!-- MAIN DASHBOARD -->
    <main class="max-w-7xl mx-auto px-6 -mt-32 relative z-20 pb-32">

        <!-- Summary Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
            <!-- Total Aset -->
            <div class="bg-white p-10 rounded-[3rem] shadow-2xl border border-slate-100 relative overflow-hidden group hover:-translate-y-2 transition-transform duration-500">
                <div
                    class="absolute top-0 right-0 w-32 h-32 bg-gold-50 rounded-bl-[5rem] -mr-8 -mt-8 transition-all group-hover:scale-110 group-hover:bg-gold-100">
                </div>
                <div class="relative z-10">
                    <p class="text-[10px] text-slate-400 font-bold uppercase tracking-[0.2em] mb-3">Dana Terhimpun</p>
                    <h3 class="text-5xl font-display text-royal-950 mb-3">Rp 12.5 M</h3>
                    <div
                        class="flex items-center gap-2 text-emerald-600 text-xs font-bold bg-emerald-50 w-fit px-3 py-1.5 rounded-full border border-emerald-100">
                        <i data-lucide="trending-up" class="w-4 h-4"></i> +18% Pertumbuhan
                    </div>
                </div>
            </div>

            <!-- Penyaluran -->
            <div class="bg-white p-10 rounded-[3rem] shadow-2xl border border-slate-100 relative overflow-hidden group hover:-translate-y-2 transition-transform duration-500">
                <div
                    class="absolute top-0 right-0 w-32 h-32 bg-royal-50 rounded-bl-[5rem] -mr-8 -mt-8 transition-all group-hover:scale-110 group-hover:bg-royal-100">
                </div>
                <div class="relative z-10">
                    <p class="text-[10px] text-slate-400 font-bold uppercase tracking-[0.2em] mb-3">Dana Tersalurkan</p>
                    <h3 class="text-5xl font-display text-royal-950 mb-3">Rp 4.2 M</h3>
                    <p class="text-xs text-slate-500 font-medium">Periode Januari - Oktober 2024</p>
                </div>
            </div>

            <!-- Penerima Manfaat -->
            <div class="bg-white p-10 rounded-[3rem] shadow-2xl border border-slate-100 relative overflow-hidden group hover:-translate-y-2 transition-transform duration-500">
                <div
                    class="absolute top-0 right-0 w-32 h-32 bg-slate-50 rounded-bl-[5rem] -mr-8 -mt-8 transition-all group-hover:scale-110 group-hover:bg-slate-100">
                </div>
                <div class="relative z-10">
                    <p class="text-[10px] text-slate-400 font-bold uppercase tracking-[0.2em] mb-3">Penerima Manfaat</p>
                    <h3 class="text-5xl font-display text-royal-950 mb-3">150 Santri</h3>
                    <p class="text-xs text-slate-500 font-medium">Beasiswa Takhassus & Tahfidz</p>
                </div>
            </div>
        </div>

        <!-- CHARTS SECTION -->
        <div class="grid lg:grid-cols-3 gap-10 mb-16">
            <!-- Source of Funds -->
            <div class="bg-white p-10 rounded-[3rem] shadow-xl border border-slate-100 flex flex-col">
                <div class="flex justify-between items-center mb-10">
                    <div>
                        <h4 class="font-display text-2xl text-royal-950">Alokasi Dana</h4>
                        <p class="text-xs text-slate-500 mt-1 uppercase tracking-widest font-bold">Berdasarkan Kategori</p>
                    </div>
                    <button class="text-slate-300 hover:text-royal-950 transition-colors"><i data-lucide="info"
                            class="w-6 h-6"></i></button>
                </div>
                <div class="chart-container relative flex-1 min-h-[250px] flex items-center justify-center">
                    <canvas id="sourceChart"></canvas>
                </div>
                <div class="mt-10 space-y-4">
                    <div class="flex justify-between items-center text-sm group cursor-pointer">
                        <span class="flex items-center gap-3"><span class="w-4 h-4 rounded-full bg-royal-950 group-hover:scale-125 transition-transform"></span>
                            <span class="text-slate-600 font-medium group-hover:text-royal-950 transition-colors">Beasiswa Kader</span></span>
                        <span class="font-bold text-royal-950">50%</span>
                    </div>
                    <div class="flex justify-between items-center text-sm group cursor-pointer">
                        <span class="flex items-center gap-3"><span class="w-4 h-4 rounded-full bg-gold-400 group-hover:scale-125 transition-transform"></span>
                            <span class="text-slate-600 font-medium group-hover:text-royal-950 transition-colors">Riset & Kurikulum</span></span>
                        <span class="font-bold text-royal-950">30%</span>
                    </div>
                    <div class="flex justify-between items-center text-sm group cursor-pointer">
                        <span class="flex items-center gap-3"><span class="w-4 h-4 rounded-full bg-slate-300 group-hover:scale-125 transition-transform"></span>
                            <span class="text-slate-600 font-medium group-hover:text-royal-950 transition-colors">Infrastruktur</span></span>
                        <span class="font-bold text-royal-950">20%</span>
                    </div>
                </div>
            </div>

            <!-- Allocation Chart -->
            <div class="lg:col-span-2 bg-white p-10 rounded-[3rem] shadow-xl border border-slate-100">
                <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-10 gap-4">
                    <div>
                        <h4 class="font-display text-2xl text-royal-950">Pertumbuhan Penyaluran</h4>
                        <p class="text-xs text-slate-500 mt-1 uppercase tracking-widest font-bold">Tren Bulanan (Juta Rp)</p>
                    </div>
                    <div class="flex gap-3">
                        <select class="bg-slate-50 border border-slate-200 text-xs font-bold text-royal-950 px-4 py-2 rounded-full focus:outline-none focus:ring-2 focus:ring-gold-400 appearance-none cursor-pointer pr-10 relative">
                            <option>Tahun 2024</option>
                            <option>Tahun 2023</option>
                        </select>
                    </div>
                </div>
                <div class="w-full h-[400px]">
                    <canvas id="allocationBarChart"></canvas>
                </div>
            </div>
        </div>

        <!-- REALIZATION TRACKER (Bukti Fisik & Akademis) -->
        <div class="mb-16">
            <div class="flex justify-between items-end mb-10 text-center md:text-left">
                <div>
                    <span class="text-gold-600 font-bold uppercase tracking-[0.4em] text-xs mb-3 block">Implementasi Program</span>
                    <h4 class="font-display text-4xl text-royal-950">Realisasi Strategis</h4>
                </div>
                <button class="hidden md:flex items-center gap-2 text-xs font-bold text-royal-950 hover:text-gold-600 transition group">
                    SELURUH LAPORAN <i data-lucide="arrow-right" class="w-4 h-4 transform group-hover:translate-x-1 transition-transform"></i>
                </button>
            </div>

            <div class="grid md:grid-cols-2 gap-8">
                <!-- Project 1 -->
                <div
                    class="bg-white rounded-[2.5rem] p-8 border border-slate-100 flex flex-col sm:flex-row gap-8 items-center shadow-xl hover:shadow-2xl transition duration-500 group">
                    <div class="w-full sm:w-40 h-40 shrink-0 rounded-3xl overflow-hidden relative shadow-lg">
                        <img src="https://images.unsplash.com/photo-1505664194779-8beaceb93744?q=80&w=300&auto=format&fit=crop"
                            class="w-full h-full object-cover group-hover:scale-110 transition duration-700">
                        <div
                            class="absolute top-3 left-3 bg-royal-950/90 text-white text-[9px] font-bold uppercase tracking-widest px-3 py-1 rounded-full border border-white/20">
                            Aktif</div>
                    </div>
                    <div class="flex-1 w-full">
                        <h5 class="font-display text-xl text-royal-950 mb-2">Digital Library Al-Ghazali</h5>
                        <p class="text-slate-500 text-sm mb-6 leading-relaxed font-light font-sans">Pengadaan server cloud dan digitalisasi 1.000+ kitab turats langka.</p>
                        <div class="space-y-3">
                            <div class="flex justify-between text-[11px] font-bold text-slate-400 uppercase tracking-wider">
                                <span>Progress</span>
                                <span class="text-royal-950">80%</span>
                            </div>
                            <div class="w-full bg-slate-100 rounded-full h-2 shadow-inner">
                                <div class="bg-royal-950 h-2 rounded-full relative overflow-hidden" style="width: 80%">
                                    <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent animate-shimmer"></div>
                                </div>
                            </div>
                            <div class="flex justify-between text-[10px] font-bold text-slate-400">
                                <span>Dana Terserap: Rp 450 Juta</span>
                                <span class="text-gold-600">Terget Des 2024</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Project 2 -->
                <div
                    class="bg-white rounded-[2.5rem] p-8 border border-slate-100 flex flex-col sm:flex-row gap-8 items-center shadow-xl hover:shadow-2xl transition duration-500 group">
                    <div class="w-full sm:w-40 h-40 shrink-0 rounded-3xl overflow-hidden relative shadow-lg">
                        <img src="https://images.unsplash.com/photo-1532012197267-da84d127e765?q=80&w=300&auto=format&fit=crop"
                            class="w-full h-full object-cover group-hover:scale-110 transition duration-700">
                         <div
                            class="absolute top-3 left-3 bg-emerald-600/90 text-white text-[9px] font-bold uppercase tracking-widest px-3 py-1 rounded-full border border-white/20">
                            Done</div>
                    </div>
                    <div class="flex-1 w-full">
                        <h5 class="font-display text-xl text-royal-950 mb-2">Publikasi Kurikulum Fiqih</h5>
                        <p class="text-slate-500 text-sm mb-6 leading-relaxed font-light font-sans">Penerbitan modul ajar integratif untuk 50 Madrasah mitra di seluruh Indonesia.</p>
                        <div class="space-y-3">
                            <div class="flex justify-between text-[11px] font-bold text-slate-400 uppercase tracking-wider">
                                <span>Progress</span>
                                <span class="text-emerald-600">100%</span>
                            </div>
                            <div class="w-full bg-slate-100 rounded-full h-2 shadow-inner">
                                <div class="bg-emerald-500 h-2 rounded-full" style="width: 100%"></div>
                            </div>
                            <div class="flex justify-between text-[10px] font-bold text-slate-400">
                                <span>Dana Terserap: Rp 120 Juta</span>
                                <span class="text-emerald-600 italic">Selesai</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- RECENT TRANSACTIONS TABLE -->
        <div class="bg-white rounded-[3rem] shadow-2xl border border-slate-100 overflow-hidden">
            <div class="p-10 border-b border-slate-50 flex flex-col md:flex-row justify-between items-start md:items-center gap-6">
                <div>
                    <h4 class="font-display text-2xl text-royal-950">Catatan Arus Kas Wakaf</h4>
                    <p class="text-xs text-slate-500 mt-1 uppercase tracking-widest font-bold">Data Transaksi Terbaru</p>
                </div>
                <div class="flex bg-slate-50 p-1 rounded-2xl border border-slate-200">
                    <button class="px-6 py-2 rounded-xl text-xs font-bold bg-white shadow-sm text-royal-950 transition">PENERIMAAN</button>
                    <button class="px-6 py-2 rounded-xl text-xs font-bold text-slate-400 hover:text-royal-950 transition">PENYALURAN</button>
                </div>
            </div>
            <div class="overflow-x-auto">
                <table class="w-full text-left text-sm text-slate-600">
                    <thead class="bg-royal-950 text-white uppercase text-[10px] tracking-[0.2em]">
                        <tr>
                            <th class="px-10 py-5">Tanggal</th>
                            <th class="px-10 py-5">Uraian Amanah</th>
                            <th class="px-10 py-5">Kategori</th>
                            <th class="px-10 py-5 text-right">Nominal</th>
                            <th class="px-10 py-5 text-center">Validasi</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-100 font-sans">
                        <tr class="hover:bg-royal-50/30 transition group">
                            <td class="px-10 py-5 text-slate-400 text-xs font-medium">20 Oktober 2024</td>
                            <td class="px-10 py-5">
                                <span class="block font-bold text-royal-950 text-base mb-0.5">Beasiswa Al-Azhar Kairo</span>
                                <span class="text-[10px] text-slate-400 uppercase tracking-wider font-bold">5 Mahasantri Takhassus</span>
                            </td>
                            <td class="px-10 py-5">
                                <span class="bg-royal-50 text-royal-950 border border-royal-100 px-3 py-1 rounded-full text-[10px] font-bold">BEASISWA</span>
                            </td>
                            <td class="px-10 py-5 text-right font-display text-lg font-bold text-royal-950 group-hover:text-gold-600 transition-colors">Rp 150.000.000</td>
                            <td class="px-10 py-5 text-center">
                                <span class="text-emerald-600 bg-emerald-50 px-3 py-1 rounded-full text-[10px] font-bold border border-emerald-100">TERVERIFIKASI</span>
                            </td>
                        </tr>
                        <tr class="hover:bg-royal-50/30 transition group">
                            <td class="px-10 py-5 text-slate-400 text-xs font-medium">18 Oktober 2024</td>
                            <td class="px-10 py-5">
                                <span class="block font-bold text-royal-950 text-base mb-0.5">Riset Fiqih Kontemporer</span>
                                <span class="text-[10px] text-slate-400 uppercase tracking-wider font-bold">Insentif 3 Peneliti Utama</span>
                            </td>
                            <td class="px-10 py-5">
                                <span class="bg-gold-50 text-gold-700 border border-gold-100 px-3 py-1 rounded-full text-[10px] font-bold">RESEARCH</span>
                            </td>
                            <td class="px-10 py-5 text-right font-display text-lg font-bold text-royal-950 group-hover:text-gold-600 transition-colors">Rp 25.000.000</td>
                            <td class="px-10 py-5 text-center">
                                <span class="text-emerald-600 bg-emerald-50 px-3 py-1 rounded-full text-[10px] font-bold border border-emerald-100">TERVERIFIKASI</span>
                            </td>
                        </tr>
                        <tr class="hover:bg-royal-50/30 transition group">
                            <td class="px-10 py-5 text-slate-400 text-xs font-medium">12 Oktober 2024</td>
                            <td class="px-10 py-5">
                                <span class="block font-bold text-royal-950 text-base mb-0.5">Pemeliharaan Cloud Library</span>
                                <span class="text-[10px] text-slate-400 uppercase tracking-wider font-bold">Renewal Server & Security</span>
                            </td>
                            <td class="px-10 py-5">
                                <span class="bg-slate-100 text-slate-600 border border-slate-200 px-3 py-1 rounded-full text-[10px] font-bold">INFRAS</span>
                            </td>
                            <td class="px-10 py-5 text-right font-display text-lg font-bold text-royal-950 group-hover:text-gold-600 transition-colors">Rp 15.000.000</td>
                            <td class="px-10 py-5 text-center">
                                <span class="text-emerald-600 bg-emerald-50 px-3 py-1 rounded-full text-[10px] font-bold border border-emerald-100">TERVERIFIKASI</span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="p-8 bg-slate-50 text-center">
                <button class="text-xs font-bold text-slate-400 hover:text-royal-950 uppercase tracking-[0.2em] transition">Unduh Laporan Tahunan (PDF)</button>
            </div>
        </div>

    </main>

    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
    <script is:inline>
        // Wait for Libs
        function initCharts() {
            if (typeof Chart === 'undefined') {
                setTimeout(initCharts, 100);
                return;
            }

            // Source Chart (Doughnut)
            const ctxSource = document.getElementById('sourceChart')?.getContext('2d');
            if (ctxSource) {
                new Chart(ctxSource, {
                    type: 'doughnut',
                    data: {
                        labels: ['Beasiswa Kader', 'Riset & Kurikulum', 'Infrastruktur'],
                        datasets: [{
                            data: [50, 30, 20],
                            backgroundColor: ['#082f49', '#d4af37', '#cbd5e1'],
                            borderWidth: 0,
                            hoverOffset: 20
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        cutout: '80%',
                        plugins: { legend: { display: false } },
                        animation: { animateRotate: true, duration: 2000 }
                    }
                });
            }

            // Allocation Bar Chart
            const ctxAlloc = document.getElementById('allocationBarChart')?.getContext('2d');
            if (ctxAlloc) {
                const gradient = ctxAlloc.createLinearGradient(0, 0, 0, 400);
                gradient.addColorStop(0, '#082f49');
                gradient.addColorStop(1, '#082f4922');

                new Chart(ctxAlloc, {
                    type: 'bar',
                    data: {
                        labels: ['Jan', 'Feb', 'Mar', 'Apr', 'Mei', 'Jun', 'Jul', 'Agu', 'Sep', 'Okt'],
                        datasets: [{
                            label: 'Investasi Pendidikan (Juta Rp)',
                            data: [320, 280, 450, 300, 310, 400, 550, 380, 420, 390],
                            backgroundColor: gradient,
                            hoverBackgroundColor: '#b4941f',
                            borderRadius: 12,
                            barThickness: 24,
                            transition: '0.4s'
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: { legend: { display: false } },
                        scales: {
                            y: { 
                                grid: { color: '#f1f5f9', borderDash: [8, 4] },
                                ticks: { font: { family: 'Cinzel', size: 10 }, color: '#94a3b8' } 
                            },
                            x: { 
                                grid: { display: false },
                                ticks: { font: { family: 'Cinzel', size: 10 }, color: '#94a3b8' } 
                            }
                        }
                    }
                });
            }
        }
        
        initCharts();
    </script>
</Layout>

<style>
    @keyframes shimmer {
        0% { transform: translateX(-100%); }
        100% { transform: translateX(100%); }
    }
    .animate-shimmer {
        animation: shimmer 2s infinite;
    }
</style>

