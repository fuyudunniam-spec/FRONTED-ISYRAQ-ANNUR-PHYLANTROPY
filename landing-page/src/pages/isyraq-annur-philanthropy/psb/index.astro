---
import Layout from '../../../layouts/Layout.astro';
---

<Layout title="Penerimaan Santri Baru | Isyraq An-Nur Philanthropy">
    <div class="pt-24 bg-paper min-h-screen">
        <!-- CONTENT -->
        <main class="py-12 px-6">
            <div class="max-w-4xl mx-auto">

                <div class="text-center mb-12">
                    <span class="text-gold-600 font-bold uppercase tracking-[0.2em] text-xs mb-2 block">Tahun Ajaran
                        2026/2027</span>
                    <h1 class="text-4xl md:text-5xl font-display text-royal-950 mb-4 leading-tight">Formulir Pendaftaran</h1>
                    <p class="text-slate-600 text-lg font-light">Pilih jalur dan jenjang pendidikan yang sesuai untuk pendaftaran santri baru.</p>
                </div>

                <form
                    class="bg-white rounded-[3rem] shadow-xl border border-slate-100 p-8 md:p-12 relative overflow-hidden">
                    <div class="absolute top-0 left-0 w-full h-2 bg-gradient-to-r from-royal-950 via-gold-400 to-royal-950">
                    </div>

                    <!-- Step 1: Pilih Jalur -->
                    <div class="mb-10">
                        <h3 class="text-xl font-display text-royal-950 mb-6 flex items-center gap-3">
                            <span
                                class="w-10 h-10 rounded-full bg-royal-100 text-royal-950 flex items-center justify-center text-sm font-bold shadow-sm">1</span>
                            Pilih Jalur Masuk
                        </h3>
                        <div class="grid md:grid-cols-2 gap-6">
                            <!-- Jalur Reguler (Berbayar) -->
                            <label class="cursor-pointer group">
                                <input type="radio" name="jalur" value="reguler" class="hidden radio-card" checked
                                    onchange="togglePath('reguler')">
                                <div
                                    class="border-2 border-slate-200 rounded-[2rem] p-6 transition-all relative hover:border-gold-400 bg-white h-full flex flex-col justify-between shadow-sm">
                                    <div>
                                        <div class="flex justify-between items-start mb-4">
                                            <div
                                                class="w-12 h-12 bg-royal-50 rounded-xl flex items-center justify-center text-royal-900 border border-royal-100">
                                                <i data-lucide="crown" class="w-6 h-6"></i>
                                            </div>
                                            <div
                                                class="check-icon w-6 h-6 bg-royal-950 text-white rounded-full flex items-center justify-center opacity-0 transition-transform scale-50">
                                                <i data-lucide="check" class="w-4 h-4"></i>
                                            </div>
                                        </div>
                                        <h4 class="font-display text-lg font-bold text-royal-950 mb-2">Jalur Reguler</h4>
                                        <p class="text-sm text-slate-500 mb-4 leading-relaxed font-light">
                                            Untuk calon santri umum (TPQ, Madin, Mahasiswa). Biaya pendidikan digunakan
                                            untuk operasional dan subsidi silang.
                                        </p>
                                    </div>
                                    <span
                                        class="text-xs font-bold text-royal-800 bg-royal-50 px-3 py-2 rounded-full text-center block uppercase tracking-wider border border-royal-100">Berbayar
                                        / Mandiri</span>
                                </div>
                            </label>

                            <!-- Jalur Beasiswa (Gratis) -->
                            <label class="cursor-pointer group">
                                <input type="radio" name="jalur" value="beasiswa" class="hidden radio-card"
                                    onchange="togglePath('beasiswa')">
                                <div
                                    class="border-2 border-slate-200 rounded-[2rem] p-6 transition-all relative hover:border-gold-400 bg-white h-full flex flex-col justify-between shadow-sm">
                                    <div>
                                        <div class="flex justify-between items-start mb-4">
                                            <div
                                                class="w-12 h-12 bg-gold-50 rounded-xl flex items-center justify-center text-gold-600 border border-gold-100">
                                                <i data-lucide="heart-handshake" class="w-6 h-6"></i>
                                            </div>
                                            <div
                                                class="check-icon w-6 h-6 bg-royal-950 text-white rounded-full flex items-center justify-center opacity-0 transition-transform scale-50">
                                                <i data-lucide="check" class="w-4 h-4"></i>
                                            </div>
                                        </div>
                                        <h4 class="font-display text-lg font-bold text-royal-950 mb-2">Jalur Beasiswa Kader
                                        </h4>
                                        <p class="text-sm text-slate-500 mb-4 leading-relaxed font-light">
                                            Beasiswa penuh (Full Funded) untuk Yatim & Dhuafa berprestasi. Wajib lolos
                                            seleksi berkas sesuai kriteria Yayasan.
                                        </p>
                                    </div>
                                    <span
                                        class="text-xs font-bold text-gold-700 bg-gold-50 px-3 py-2 rounded-full text-center block uppercase tracking-wider border border-gold-100">Gratis
                                        100%</span>
                                </div>
                            </label>
                        </div>
                    </div>

                    <!-- SUB-STEP 1.1: PILIH JENJANG (Khusus Reguler) -->
                    <div id="jenjang-selection" class="mb-10 pt-4 border-t border-slate-100 fade-in-section">
                        <label class="text-xs font-bold text-slate-500 uppercase tracking-wider ml-2 mb-4 block">Pilih
                            Jenjang Pendidikan</label>
                        <div class="grid md:grid-cols-3 gap-4">
                            <label class="cursor-pointer group">
                                <input type="radio" name="jenjang" value="tpq" class="hidden radio-card"
                                    onchange="updateFees('tpq')">
                                <div
                                    class="border border-slate-200 rounded-2xl p-4 text-center hover:border-gold-400 transition bg-white shadow-sm">
                                    <div
                                        class="check-icon w-5 h-5 bg-royal-950 text-white rounded-full flex items-center justify-center opacity-0 mx-auto mb-2 scale-50 transition-transform">
                                        <i data-lucide="check" class="w-3 h-3"></i>
                                    </div>
                                    <span class="block font-bold text-royal-950 uppercase tracking-wide">TPQ</span>
                                    <span class="text-xs text-slate-500">Usia TK-SD</span>
                                </div>
                            </label>
                            <label class="cursor-pointer group">
                                <input type="radio" name="jenjang" value="madin" class="hidden radio-card" checked
                                    onchange="updateFees('madin')">
                                <div
                                    class="border border-slate-200 rounded-2xl p-4 text-center hover:border-gold-400 transition bg-white shadow-sm">
                                    <div
                                        class="check-icon w-5 h-5 bg-royal-950 text-white rounded-full flex items-center justify-center opacity-0 mx-auto mb-2 scale-50 transition-transform">
                                        <i data-lucide="check" class="w-3 h-3"></i>
                                    </div>
                                    <span class="block font-bold text-royal-950 uppercase tracking-wide">Madrasah Diniyah</span>
                                    <span class="text-xs text-slate-500">Usia SD-SMP</span>
                                </div>
                            </label>
                            <label class="cursor-pointer group">
                                <input type="radio" name="jenjang" value="mahasiswa" class="hidden radio-card"
                                    onchange="updateFees('mahasiswa')">
                                <div
                                    class="border border-slate-200 rounded-2xl p-4 text-center hover:border-gold-400 transition bg-white shadow-sm">
                                    <div
                                        class="check-icon w-5 h-5 bg-royal-950 text-white rounded-full flex items-center justify-center opacity-0 mx-auto mb-2 scale-50 transition-transform">
                                        <i data-lucide="check" class="w-3 h-3"></i>
                                    </div>
                                    <span class="block font-bold text-royal-950 uppercase tracking-wide">Pesantren Mahasiswa</span>
                                    <span class="text-xs text-slate-500">Mahasiswa/Dewasa</span>
                                </div>
                            </label>
                        </div>
                    </div>

                    <!-- DYNAMIC SECTION: FINANCIAL INFO (Muncul jika Reguler) -->
                    <div id="finance-info" class="mb-10 pt-4 fade-in-section">
                        <h3 class="text-xl font-display text-royal-950 mb-6 flex items-center gap-3 font-bold">
                            <i data-lucide="coins" class="w-6 h-6 text-gold-500"></i>
                            <span id="fee-title">Rincian Biaya (Madrasah Diniyah)</span>
                        </h3>
                        <div class="bg-royal-50 rounded-2xl p-8 border border-royal-100 shadow-inner">
                            <table class="w-full text-sm text-slate-600">
                                <tr class="border-b border-royal-100">
                                    <td class="py-4 font-medium" id="fee-label-1">Pendaftaran & Seragam</td>
                                    <td class="py-4 text-right font-bold text-royal-950" id="fee-value-1">Rp 350.000</td>
                                </tr>
                                <tr class="border-b border-royal-100">
                                    <td class="py-4 font-medium" id="fee-label-2">SPP Bulanan</td>
                                    <td class="py-4 text-right font-bold text-royal-950" id="fee-value-2">Rp 100.000</td>
                                </tr>
                                <tr class="border-b border-royal-100">
                                    <td class="py-4 font-medium" id="fee-label-3">Kitab & Modul (Per Tahun)</td>
                                    <td class="py-4 text-right font-bold text-royal-950" id="fee-value-3">Rp 250.000</td>
                                </tr>
                                <tr>
                                    <td class="py-5 font-bold text-gold-600 italic leading-relaxed">*Sebagian dana dialokasikan untuk
                                        subsidi santri yatim & dhuafa.</td>
                                    <td class="py-5 text-right font-bold text-gold-600 uppercase tracking-widest text-xs">Jazakumullah</td>
                                </tr>
                            </table>
                        </div>
                        <div class="mt-6 p-5 bg-white border border-slate-200 rounded-2xl flex gap-5 items-center shadow-sm">
                            <div
                                class="w-12 h-12 bg-royal-950 text-white rounded-full flex items-center justify-center shrink-0 font-bold text-lg shadow-lg">
                                !</div>
                            <div class="text-sm">
                                <p class="font-bold text-royal-950 mb-1" id="transfer-instruction">Biaya Pendaftaran: Rp 100.000
                                </p>
                                <p class="text-slate-500 font-medium">BSI: <span class="text-royal-950 font-bold">7123-4567-89</span> a.n. Yayasan Isyraq An-Nur</p>
                            </div>
                        </div>
                    </div>

                    <!-- DYNAMIC SECTION: SCHOLARSHIP REQUIREMENTS (Muncul jika Beasiswa) -->
                    <div id="scholarship-info" class="mb-10 pt-8 border-t border-slate-100 fade-in-section hidden">
                        <h3 class="text-xl font-display text-royal-950 mb-6 flex items-center gap-3 font-bold">
                            <i data-lucide="file-check" class="w-6 h-6 text-gold-500"></i>
                            Syarat Khusus Beasiswa
                        </h3>
                        <div class="bg-gold-50 rounded-2xl p-8 border border-gold-100 shadow-inner">
                            <ul class="space-y-4 text-sm text-slate-700 font-light">
                                <li class="flex gap-3 items-start">
                                    <i data-lucide="alert-circle" class="w-5 h-5 text-gold-600 shrink-0 mt-0.5"></i> 
                                    <span>Melampirkan <strong>Surat Keterangan Tidak Mampu (SKTM)</strong> yang masih berlaku dari Kelurahan/Desa asli.</span>
                                </li>
                                <li class="flex gap-3 items-start">
                                    <i data-lucide="alert-circle" class="w-5 h-5 text-gold-600 shrink-0 mt-0.5"></i> 
                                    <span>Melampirkan <strong>Surat Kematian Ayah</strong> (Khusus bagi pendaftar santri Yatim).</span>
                                </li>
                                <li class="flex gap-3 items-start">
                                    <i data-lucide="alert-circle" class="w-5 h-5 text-gold-600 shrink-0 mt-0.5"></i> 
                                    <span>Berkomitmen untuk mengikuti seluruh <strong>Masa Pendidikan</strong> dan pengabdian (Khidmah) setelah lulus.</span>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <!-- Step 2: Data Diri (Common) -->
                    <div class="mb-10 pt-10 border-t border-slate-100">
                        <h3 class="text-xl font-display text-royal-950 mb-6 flex items-center gap-3 font-bold">
                            <span
                                class="w-10 h-10 rounded-full bg-royal-100 text-royal-950 flex items-center justify-center text-sm font-bold shadow-sm">2</span>
                            Data Santri & Wali
                        </h3>
                        <div class="grid md:grid-cols-2 gap-8">
                            <div class="md:col-span-2">
                                <label
                                    class="text-xs font-bold text-slate-500 uppercase tracking-widest ml-4 mb-2 block">Nama
                                    Lengkap Santri</label>
                                <input type="text" class="input-royal w-full border border-slate-200 rounded-2xl py-4 px-6 focus:outline-none focus:border-royal-950 focus:ring-1 focus:ring-royal-950 transition bg-slate-50" placeholder="Sesuai Akta Kelahiran">
                            </div>
                            <div>
                                <label
                                    class="text-xs font-bold text-slate-500 uppercase tracking-widest ml-4 mb-2 block">NISN /
                                    NIK</label>
                                <input type="text" class="input-royal w-full border border-slate-200 rounded-2xl py-4 px-6 focus:outline-none focus:border-royal-950 focus:ring-1 focus:ring-royal-950 transition bg-slate-50" placeholder="Nomor Induk">
                            </div>
                            <div>
                                <label class="text-xs font-bold text-slate-500 uppercase tracking-widest ml-4 mb-2 block">No.
                                    WA Wali</label>
                                <input type="text" class="input-royal w-full border border-slate-200 rounded-2xl py-4 px-6 focus:outline-none focus:border-royal-950 focus:ring-1 focus:ring-royal-950 transition bg-slate-50" placeholder="08..." required>
                            </div>
                        </div>
                    </div>

                    <!-- Step 3: Upload Berkas (Dynamic Label) -->
                    <div class="mb-10 pt-10 border-t border-slate-100">
                        <h3 class="text-xl font-display text-royal-950 mb-6 flex items-center gap-3 font-bold">
                            <span
                                class="w-10 h-10 rounded-full bg-royal-100 text-royal-950 flex items-center justify-center text-sm font-bold shadow-sm">3</span>
                            Upload Berkas
                        </h3>
                        <div class="grid md:grid-cols-2 gap-8">
                            <!-- Upload 1: Kartu Keluarga -->
                            <div>
                                <label
                                    class="text-xs font-bold text-slate-500 uppercase tracking-widest ml-4 mb-3 block">Kartu
                                    Keluarga (KK)</label>
                                <div
                                    class="upload-zone p-8 flex flex-col items-center justify-center text-center h-40 group relative overflow-hidden border-2 border-dashed border-slate-200 rounded-3xl hover:border-gold-400 hover:bg-gold-50/10 transition cursor-pointer">
                                    <input type="file" class="absolute inset-0 opacity-0 cursor-pointer z-10">
                                    <i data-lucide="file-up"
                                        class="w-8 h-8 text-slate-400 mb-3 group-hover:text-gold-600 transition-colors"></i>
                                    <span class="text-xs font-bold text-slate-500 uppercase tracking-widest">Pilih File</span>
                                </div>
                            </div>

                            <!-- Upload 2: DYNAMIC (Bukti Bayar / SKTM) -->
                            <div id="dynamic-upload-container">
                                <label id="dynamic-upload-label"
                                    class="text-xs font-bold text-slate-500 uppercase tracking-widest ml-4 mb-3 block">Bukti
                                    Transfer Pendaftaran</label>
                                <div
                                    class="upload-zone p-8 flex flex-col items-center justify-center text-center h-40 group relative overflow-hidden border-2 border-dashed border-slate-200 rounded-3xl hover:border-gold-400 hover:bg-gold-50/10 transition cursor-pointer">
                                    <input type="file" class="absolute inset-0 opacity-0 cursor-pointer z-10">
                                    <i data-lucide="image"
                                        class="w-8 h-8 text-slate-400 mb-3 group-hover:text-gold-600 transition-colors"></i>
                                    <span class="text-xs font-bold text-slate-500 uppercase tracking-widest">Pilih File</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Submit -->
                    <div class="pt-8">
                        <button
                            class="w-full py-5 bg-royal-950 text-white rounded-full shadow-2xl hover:bg-royal-900 transition font-display font-bold uppercase tracking-widest text-sm flex items-center justify-center gap-4 transform hover:-translate-y-1 relative group overflow-hidden">
                            <div class="absolute inset-0 bg-white/10 translate-y-full group-hover:translate-y-0 transition-transform duration-300"></div>
                            <span class="relative">Kirim Pendaftaran</span> 
                            <i data-lucide="send" class="w-5 h-5 text-gold-400 relative"></i>
                        </button>
                        <p class="text-center text-[10px] text-slate-400 mt-6 uppercase tracking-[0.2em] font-bold">
                            Keamanan Data Terjamin â€¢ Verifikasi 1x24 Jam
                        </p>
                    </div>

                </form>
            </div>
        </main>
    </div>
</Layout>

<style>
    .radio-card:checked + div {
        border-color: #b4941f;
        background-color: #fefce8;
        box-shadow: 0 10px 15px -3px rgba(180, 148, 31, 0.1);
    }
    
    .radio-card:checked + div .check-icon {
        opacity: 1;
        transform: scale(1);
    }

    .fade-in-section {
        animation: fadeIn 0.5s ease-out forwards;
    }

    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>

<script is:inline>
    // Data Biaya (Simulasi)
    const feeData = {
        'tpq': {
            title: 'Rincian Biaya (TPQ)',
            item1: { label: 'Pendaftaran & Buku', value: 'Rp 150.000' },
            item2: { label: 'Infaq Bulanan', value: 'Rp 50.000' },
            item3: { label: 'Seragam', value: 'Rp 150.000' },
            transfer: 'Biaya Pendaftaran: Rp 50.000'
        },
        'madin': {
            title: 'Rincian Biaya (Madrasah Diniyah)',
            item1: { label: 'Pendaftaran & Seragam', value: 'Rp 350.000' },
            item2: { label: 'SPP Bulanan', value: 'Rp 100.000' },
            item3: { label: 'Kitab & Modul (Per Tahun)', value: 'Rp 250.000' },
            transfer: 'Biaya Pendaftaran: Rp 100.000'
        },
        'mahasiswa': {
            title: 'Rincian Biaya (Pesantren Mahasiswa)',
            item1: { label: 'Uang Pangkal (Asrama)', value: 'Rp 1.500.000' },
            item2: { label: 'SPP Bulanan (Makan+Fasilitas)', value: 'Rp 650.000' },
            item3: { label: 'Kitab & Program', value: 'Rp 300.000' },
            transfer: 'Biaya Pendaftaran: Rp 200.000'
        }
    };

    function togglePath(path) {
        const jenjangSection = document.getElementById('jenjang-selection');
        const financeSection = document.getElementById('finance-info');
        const scholarshipSection = document.getElementById('scholarship-info');
        const dynamicLabel = document.getElementById('dynamic-upload-label');

        if (path === 'reguler') {
            jenjangSection.classList.remove('hidden');
            financeSection.classList.remove('hidden');
            scholarshipSection.classList.add('hidden');
            dynamicLabel.innerText = "Bukti Transfer Pendaftaran";

            updateFees('madin');
            document.querySelector('input[name="jenjang"][value="madin"]').checked = true;

        } else {
            jenjangSection.classList.add('hidden');
            financeSection.classList.add('hidden');
            scholarshipSection.classList.remove('hidden');
            dynamicLabel.innerText = "Scan SKTM / Surat Kematian Ayah";
        }
    }

    function updateFees(type) {
        const data = feeData[type];
        if (!data) return;
        document.getElementById('fee-title').innerText = data.title;
        document.getElementById('fee-label-1').innerText = data.item1.label;
        document.getElementById('fee-value-1').innerText = data.item1.value;
        document.getElementById('fee-label-2').innerText = data.item2.label;
        document.getElementById('fee-value-2').innerText = data.item2.value;
        document.getElementById('fee-label-3').innerText = data.item3.label;
        document.getElementById('fee-value-3').innerText = data.item3.value;
        document.getElementById('transfer-instruction').innerText = data.transfer;
    }
</script>

